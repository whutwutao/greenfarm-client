<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_recyclerview_item_plant_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_recyclerview_item_plant_product"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/product" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_plant_product_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="名称"
                android:textSize="18sp"
                android:gravity="center|left"/>

            <TextView
                android:id="@+id/tv_plant_product_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="描述"
                android:textSize="18sp"
                android:gravity="center|left"/>

            <TextView
                android:id="@+id/tv_plant_product_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="数量"
                android:textSize="18sp"
                android:gravity="center|left"/>

            <TextView
                android:id="@+id/tv_plant_product_status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="状态"
                android:textSize="18sp"
                android:gravity="center|left"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"/>
</LinearLayout>