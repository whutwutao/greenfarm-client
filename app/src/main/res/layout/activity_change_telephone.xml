<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mine.setting.ChangeTelephoneActivity">

    <RelativeLayout
        android:background="@drawable/shape_my_info_bg"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改手机号"
            android:textColor="@color/skin_text_white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/layer_form">

        <ImageView
            android:id="@+id/iv_change_username"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_telephone" />

        <EditText
            android:id="@+id/et_new_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_change_username"
            android:hint="输入新手机号"
            android:inputType="phone"
            android:textColor="#404040"
            android:textSize="16sp"
            android:background="@null"/>

    </RelativeLayout>
    <Button
        android:id="@+id/btn_change_telephone"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="67dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/shape_big_register_btn"
        android:text="@string/finish"
        android:textColor="@color/white"
        android:textSize="24sp" />


</LinearLayout>