<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mine.productManage.AddProductActivity">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_my_info_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="农产品上架"
            android:textColor="@color/skin_text_white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/layer_form">

        <TextView
            android:id="@+id/tv_add_product_name"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="名 称"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_add_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_add_product_name"
            android:hint="输入农产品名称"
            android:textColor="#404040"
            android:textSize="16sp"
            android:background="@null"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C8C5C5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/layer_form">

        <TextView
            android:id="@+id/tv_add_product_description"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="描 述"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_add_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_add_product_description"
            android:hint="输入农产品描述"
            android:textColor="#404040"
            android:textSize="16sp"
            android:background="@null"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C8C5C5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/layer_form">

        <TextView
            android:id="@+id/tv_add_product_price"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="价 格"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_add_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_add_product_price"
            android:hint="输入农产品价格"
            android:textColor="#404040"
            android:textSize="16sp"
            android:background="@null"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C8C5C5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/layer_form">

        <TextView
            android:id="@+id/tv_add_product_category"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="类 别"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_product_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_add_product_category" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C8C5C5" />

    <RelativeLayout
        android:id="@+id/rl_add_product_upload_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:background="@drawable/layer_form"
        android:onClick="choosePicture">

        <ImageView
            android:id="@+id/iv_add_product_upload_picture"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_upload_picture"/>

        <TextView
            android:id="@+id/tv_add_farm_upload_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_add_product_upload_picture"
            android:layout_marginLeft="10dp"
            android:text="选择农产品图片"
            android:textSize="16sp"
            android:textColor="#404040"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_add_product_picture_to_upload"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toLeftOf="@id/iv_add_farm_right_arrow"
            android:src="@mipmap/product"/>

        <ImageView
            android:id="@+id/iv_add_farm_right_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_right_arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C8C5C5" />
    <Button
        android:id="@+id/btn_add_product"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="67dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/shape_big_register_btn"
        android:text="@string/finish"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:onClick="addProduct"/>

</LinearLayout>