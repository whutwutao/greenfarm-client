<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mine.myFarm.customer.management.plant.CustomerAddPlantActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_my_info_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加农产品"
            android:textColor="@color/skin_text_white"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_customer_add_plant_name"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/layer_form">

        <ImageView
            android:id="@+id/iv_customer_add_plant_name"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/fruit_and_vegetable"/>

        <EditText
            android:id="@+id/et_customer_add_plant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_customer_add_plant_name"
            android:hint="输入您想种植的农产品名称"
            android:textColor="#404040"
            android:textSize="16sp"
            android:background="@null"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C8C5C5" />

    <RelativeLayout
        android:id="@+id/rl_customer_add_plant_description"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/layer_form">

        <ImageView
            android:id="@+id/iv_customer_add_plant_description"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/description"/>

        <EditText
            android:id="@+id/et_customer_add_plant_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_customer_add_plant_description"
            android:hint="输入描述信息"
            android:textColor="#404040"
            android:textSize="16sp"
            android:background="@null"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C8C5C5" />

    <RelativeLayout
        android:id="@+id/rl_customer_add_plant_amount"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/layer_form">

        <ImageView
            android:id="@+id/iv_customer_add_plant_amount"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/balance"/>

        <EditText
            android:id="@+id/et_customer_add_plant_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_customer_add_plant_amount"
            android:hint="输入种植量"
            android:textColor="#404040"
            android:textSize="16sp"
            android:background="@null"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C8C5C5" />

    <Button
        android:id="@+id/btn_customer_add_plant_finish"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="67dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/shape_big_register_btn"
        android:text="@string/finish"
        android:textColor="@color/white"
        android:textSize="24sp" />


</LinearLayout>